% Declare the variable \accentcolor with a default value
\def\declvar#1#2{\def#1{#2}}

% Initialize \accentcolor to the default color 'blue'
\declvar{\accentcolor}{blue}

% Example usage:
% \setaccentcolor{RoyalBlue4} % Sets accent color to RoyalBlue4
% \setaccentcolor{} % Resets to the default blue

% Define the \setaccentcolor command to update \accentcolor based on user input or fallback to blue
\def\setaccentcolor#1{%
	\ifx\relax#1\relax % Check if the input is empty
		\declvar{\accentcolor}{blue} % Set to default blue if no input
		\colorlet{accentcolor}{\accentcolor}
	\else
		\declvar{\accentcolor}{#1} % Set to user-specified color
		\colorlet{accentcolor}{\accentcolor}
	\fi
}

