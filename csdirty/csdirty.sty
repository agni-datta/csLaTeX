% Set default configuration (can be modified in the document preamble)
\FullVersiontrue      % Set this to 'true' for the full version
\Commentsfalse        % Set this to 'true' to enable comments

% Automatically set the opposite version if the full version is active
\ifFullVersion
    \ShortVersionfalse  % Full version enabled, short version disabled
\else
    \ShortVersiontrue   % Short version enabled, full version disabled
\fi

% Define the generic \newcomment command
\newcommand{\newcomment}[3]{%
    \ifComments
        % If comments are enabled, define the comment macro
        \expandafter\newcommand\csname #3\endcsname[1]{%
            {\noindent\textcolor{#2}{\sffamily ##1 -- $\mathsf{#1}$}}%
        }%
    \else
        % If comments are disabled, define the comment macro as a no-op
        \expandafter\newcommand\csname #3\endcsname[1]{}%
    \fi
}

