%% Appendix Handling                                                      %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage[%
	toc,        % Includes appendices in the table of contents
	page,       % Starts each appendix on a new page
	title,      % Prefixes appendix titles with "Appendix"
	header,     % Adds "Appendix" to headers
